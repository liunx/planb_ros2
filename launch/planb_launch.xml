<launch>
  <node pkg="planb_ros2" exec="camera" output="screen">
    <param name="width" value="320"/>
    <param name="height" value="240"/>
    <param name="device_id" value="0"/>
  </node>
  <node pkg="planb_ros2" exec="hardware" output="screen"/>
  <node pkg="planb_ros2" exec="tracker" output="screen"/>
  <node pkg="planb_ros2" exec="monitor" output="screen"/>
  <node pkg="planb_ros2" exec="motion_controller" output="screen">
    <param name="width" value="320"/>
    <param name="height" value="240"/>
  </node>
  <node pkg="planb_ros2" exec="aruco" output="screen">
    <param name="dict_id" value="0"/>
  </node>
  <node pkg="planb_ros2" exec="brain" output="screen">
    <param name="bt_xml" value="./demo.xml"/>
  </node>
</launch>
